<ul class="timeline">
	<% @article.comments.each do |comment| %>
	    <li>
	   	  <div class="timeline-item">
	   	  	<span class="time">
	   	      <%=distance_of_time_in_words(comment.article.created_at, comment.created_at) %> ago
	   	    </span>
   	    	<div class="timeline-body">
			   <h5><span class="text-primary"><%= comment.author_name %></span>span></h5>
			   <p><%=comment.content %></p>
			</div> 
		</div>
 		</li>
 	<% end %>
</ul>
